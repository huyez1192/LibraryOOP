<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BorrowHistoryController" style="-fx-background-color: linear-gradient(to bottom, #fceff9, #e0ffe0); -fx-padding: 20;">
    <children>
        <Label text="Borrow History" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #d81b60;">
            <font>
                <Font name="Cambria Bold" size="24.0" />
            </font>
        </Label>
        <TableView fx:id="borrowHistoryTable" prefHeight="500.0" prefWidth="760.0">
            <columns>
                <TableColumn fx:id="documentTitleColumn" prefWidth="300.0" text="Document Title" />
                <TableColumn fx:id="borrowDateColumn" prefWidth="200.0" text="Borrow Date" />
                <TableColumn fx:id="returnDateColumn" prefWidth="200.0" text="Return Date" />
            </columns>
        </TableView>
        <Button text="Close" onAction="#handleClose" style="-fx-font-family: 'Helvetica'; -fx-background-color: linear-gradient(to bottom, #f44336, #d32f2f); -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 10 20;" />
    </children>
</VBox>
