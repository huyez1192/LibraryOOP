<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ForgotPasswordController" style="-fx-background-color: linear-gradient(to bottom, #fceff9, #e0ffe0); -fx-padding: 20;">
    <children>
        <Label text="Reset Password" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #d81b60;">
            <font>
                <Font name="Cambria" size="24.0" />
            </font>
        </Label>
        <Label fx:id="messageLabel" textFill="red" />
        <TextField fx:id="usernameTextField" promptText="Username" style="-fx-font-family: 'Roboto'; -fx-prompt-text-fill: #388e3c; -fx-border-color: #80cbc4; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.8); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />

        <PasswordField fx:id="newPasswordField" promptText="New Password" style="-fx-font-family: 'Roboto'; -fx-prompt-text-fill: #388e3c; -fx-border-color: #80cbc4; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.8); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />

        <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" style="-fx-font-family: 'Roboto'; -fx-prompt-text-fill: #388e3c; -fx-border-color: #80cbc4; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.8); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />

        <TextField fx:id="emailTextField" promptText="Email Address" style="-fx-font-family: 'Roboto'; -fx-prompt-text-fill: #388e3c; -fx-border-color: #80cbc4; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.8); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />

        <Button fx:id="resetPasswordButton" text="Reset Password" onAction="#resetPassword" style="-fx-font-family: 'Helvetica'; -fx-background-color: linear-gradient(to bottom, #ff4081, #d81b60); -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 3);" />
    </children>
</VBox>
