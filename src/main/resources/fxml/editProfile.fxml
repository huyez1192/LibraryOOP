<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditProfileController" style="-fx-background-color: linear-gradient(to bottom, #fceff9, #e0ffe0); -fx-padding: 20;">
    <children>
        <Label text="Edit Profile" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #d81b60;">
            <font>
                <Font name="Cambria Bold" size="24.0" />
            </font>
        </Label>
        <Label fx:id="messageLabel" textFill="red" />
        <TextField fx:id="fullNameField" promptText="Full Name" style="-fx-font-family: 'Roboto'; -fx-prompt-text-fill: #388e3c; -fx-border-color: #80cbc4; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.8); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />
        <TextField fx:id="usernameField" promptText="Username" style="-fx-font-family: 'Roboto'; -fx-prompt-text-fill: #388e3c; -fx-border-color: #80cbc4; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.8); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />
        <TextField fx:id="emailField" promptText="Email Address" style="-fx-font-family: 'Roboto'; -fx-prompt-text-fill: #388e3c; -fx-border-color: #80cbc4; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.8); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />
        <PasswordField fx:id="passwordField" promptText="New Password" style="-fx-font-family: 'Roboto'; -fx-prompt-text-fill: #388e3c; -fx-border-color: #80cbc4; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.8); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password" style="-fx-font-family: 'Roboto'; -fx-prompt-text-fill: #388e3c; -fx-border-color: #80cbc4; -fx-border-radius: 20; -fx-background-radius: 20; -fx-background-color: rgba(255,255,255,0.8); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);" />
        <Button fx:id="saveButton" text="Save Changes" onAction="#handleSaveChanges" style="-fx-font-family: 'Helvetica'; -fx-background-color: linear-gradient(to bottom, #4caf50, #388e3c); -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 20; -fx-background-radius: 20; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 8, 0, 0, 3);" />
    </children>
</VBox>
