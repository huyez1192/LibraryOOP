<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="400" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="controller.BookDetailsController">

    <!-- Ảnh bìa của sách -->
    <ImageView fx:id="bookThumbnail" fitHeight="300" fitWidth="200" preserveRatio="true" />

    <!-- Thông tin sách -->
    <VBox alignment="CENTER" spacing="10">
        <Label fx:id="bookTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Book Title" />
        <Label fx:id="bookAuthors" style="-fx-font-size: 14px;" text="Author(s): " />
        <Label fx:id="bookCategory" style="-fx-font-size: 14px;" text="Category: " />
    </VBox>

    <!-- Mô tả sách -->
    <TextArea fx:id="book" editable="false" prefHeight="150" prefWidth="350" wrapText="true" />

    <!-- Các nút điều khiển -->
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleBorrowBook" style="-fx-background-color: #5cb85c; -fx-text-fill: white;" text="Mượn Sách" />
        <Button onAction="#handleReturnBook" style="-fx-background-color: #f0ad4e; -fx-text-fill: white;" text="Trả Sách" />
    </HBox>

    <!-- Nút đóng -->
    <Button onAction="#handleClose" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Close">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>

</VBox>
