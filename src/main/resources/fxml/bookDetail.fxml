<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="900" prefWidth="600" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BookDetailsController">

    <!-- Bên trái: Ảnh bìa -->
    <left>
        <VBox alignment="CENTER" prefWidth="250" spacing="20" style="-fx-padding: 60;">
            <ImageView fx:id="bookThumbnail" fitHeight="500" fitWidth="300" preserveRatio="true" />
        </VBox>
    </left>

    <!-- Bên phải: Thông tin sách và các nút -->
    <center>
        <VBox alignment="TOP_LEFT" spacing="30" style="-fx-padding: 50;">
            <!-- Tiêu đề sách -->
            <Label fx:id="bookTitle" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Tên Sách" />
            <!-- Tác giả -->
            <Label fx:id="bookAuthors" style="-fx-font-size: 20px;" text="Tác giả: ..." />
            <!-- Thể loại -->
            <Label fx:id="bookCategory" style="-fx-font-size: 20px;" text="Thể loại: ..." />

            <!-- Mô tả sách -->
            <TextArea fx:id="bookDescription" editable="false" prefHeight="200" style="-fx-font-size: 18px;" text="Mô tả sách..." wrapText="true" />

            <!-- Các nút -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Button fx:id="borrowButton" onAction="#handleBorrowBook" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-front-size: 18px;" text="Mượn Sách">
               <font>
                  <Font size="14.0" />
               </font></Button>
                <Button fx:id="shareButton" onAction="#handleShareBook" style="-fx-background-color: #0275d8; -fx-text-fill: white; -fx-front-size: 18px;" text="Chia Sẻ">
               <font>
                  <Font size="14.0" />
               </font></Button>
                <Button fx:id="closeButton" onAction="#handleClose" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-front-size: 18px" text="Đóng">
               <font>
                  <Font size="14.0" />
               </font></Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
